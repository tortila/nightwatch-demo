{
  "src_folders": ["spec"],
  "output_folder": "reports",
  "globals_path": "globals.js",
  "page_objects_path": "pages/",
  "custom_commands_path": "commands/",
  "custom_assertions_path": "assertions/",
  "selenium": {
    "start_process": true,
    "server_path": "resources/selenium-server-standalone-2.48.2.jar",
    "log_path": "reports",
